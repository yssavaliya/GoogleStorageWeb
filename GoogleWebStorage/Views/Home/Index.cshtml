    ViewData["Title"] = "Home Page";
}
<!-- Hero Section -->
<section class="hero-section vh-100 d-flex align-items-center  text-light ">
    <div class="container position-relative text-center">
        <h1 class="display-4 fw-bold mb-4">Every Face Tells a Story</h1>
        <p class="lead mb-5">Pain&Life: Where Struggles Meet Strength</p>
    </div>
</section>
<br>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        
    </div>
</div>


<!-- Mission Statement -->
<section class="mission-statement bg-dark py-5">
    <div class="container text-center">
        <div class="jumbotron p-4 rounded">
            <h2 class="display-4 mb-3">We Don't Just Tell Stories. We Honor Journeys.</h2>
            <p class="lead mb-4">Our mission is to provide a platform where personal struggles and triumphs are shared, honored, and turned into sources of inspiration for others. Every story submitted enriches our community and supports those who need it most.</p>
        </div>
    </div>
</section>
